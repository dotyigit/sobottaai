{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SobottaAI",
  "version": "0.1.0",
  "identifier": "ai.sobotta.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "SobottaAI",
        "width": 900,
        "height": 650,
        "center": true,
        "resizable": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.productivity",
    "macOS": {
      "minimumSystemVersion": "15.0",
      "entitlements": "Entitlements.plist",
      "frameworks": [
        "dylibs/libonnxruntime.1.17.1.dylib",
        "dylibs/libsherpa-onnx-c-api.dylib"
      ]
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFFRTEzQjg2RTE1OEQxOUQKUldTZDBWamhoanZoSHJPdVV6TTJ2MmdwdGdKc2RTcWZIVjZtWmtDUjNKN0pJeVpYRGRxWEl5K3cK",
      "endpoints": [
        "https://github.com/dotyigit/sobottaai/releases/latest/download/latest.json"
      ]
    }
  }
}
